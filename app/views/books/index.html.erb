<p id="notice"><%= notice %></p>
<h1>Books</h1>
<%= link_to 'New Book', new_book_path %>
<table>
  <thead>
    <tr>
      <th>Work done</th>
      <th>Genre</th>
      <th>Title</th>
      <th>Old filename</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.service %></td>
        <td><%= book.genre.name %></td>
        <td><%= book.title %></td>
        <td><%= book.old_filename %></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
