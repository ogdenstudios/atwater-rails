<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= select_tag :author_id, options_for_select(@authors, book.author_id)  %>
  </div>
  <div class="field">
    <%= form.label :work_done %>
    <%= form.select :work_done, ["Proof", "Copyedit"], id: :book_work_done %>
  </div>
  <div class="field">
    <%= form.label :genre %>
    <%= form.text_field :genre, id: :book_genre %>
  </div>
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <%= form.label "Featured"%>
    <%= form.check_box :featured %>
  </div>
  <div class="field">
    <%= form.file_field :picture %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>


<% end %>
