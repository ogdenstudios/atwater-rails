<p id="notice"><%= notice %></p>
<p>
  <strong>Title:</strong>
  <%= @book.title %>
</p>
<p>
  <strong>Author:</strong>
  <%= Author.find(@book.author_id).full_name %>
</p>
<p>
  <strong>Work done:</strong>
  <%= @book.service %>
</p>
<p>
  <strong>Genre:</strong>
  <%= @book.genre.name %>
</p>
<p>
  <strong>Subgenre:</strong>
  <%= @book.subgenre %>
</p>
<% if @book.featured %>
  <p>
    <strong>Featured</strong>
  </p>
<% end %>
<% if @book.picture? %>
  <%= image_tag @book.picture.url %>
<% else %>
  <% if Rails.application.assets.find_asset("old_images/#{@book.old_filename}.jpg").nil? %>
    <%= image_tag("https://via.placeholder.com/350x600")%>
  <% else %>
    <%= image_tag("old_images/#{@book.old_filename}.jpg") %>
  <% end %>
<% end %>
<% if current_user && current_user["admin_rights"] == true %>
  <p>
    <%= link_to 'Edit', edit_book_path(@book) %>
  </p>
<% end %>
