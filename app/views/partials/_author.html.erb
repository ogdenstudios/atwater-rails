<article class="author">
  <h2>
    <a href="/authors/<%= author.slug %>">
      <%= author.first_name %> <%= author.last_name%>
    </a>
  </h2>
  <% if showTestimonial %>
    <p><%= author.testimonial %></p>
  <% end %>
  <div class="author__image-wrapper">
    <%= image_tag author.featured_book.picture.url, class: "author__image" %>
    <a href="/authors/<%= author.slug %>">
      <div class="author__see-more">
        <p>Click here to see all titles for this author.</p>
      </div>
    </a>
  </div>
</article>
