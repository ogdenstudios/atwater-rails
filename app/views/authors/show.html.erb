<p id="notice"><%= notice %></p>
<div class="book__container">
  <% @author.books.each do |book| %>
    <div class="book">
      <% if current_user && current_user["admin_rights"] == true %>
        <a href="/books/<%= book.id %>">
          <li><%=book.title%></li>
        </a>
      <% else %>
        <li><%=book.title%></li>
      <% end %>
        <% if Rails.application.assets.find_asset("old_images/#{book.old_filename}.jpg").nil? %>
            <%= image_tag("https://via.placeholder.com/350x600", class: "author__image")%>
          <% else %>
            <%= image_tag("old_images/#{book.old_filename}.jpg", class: "author__image") %>
        <% end %>
    </div>
  <% end %>
</div>
<% if current_user && current_user["admin_rights"] == true %>
  <%= link_to 'Edit', edit_author_path(@author) %> |
  <%= link_to 'Back', authors_path %>
<% end %>
